<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/activity_paint_undo"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/undo" />

        <ImageView
            android:id="@+id/activity_paint_redo"
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/redo"/>

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-2dp"
        android:layout_weight="1"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">
        <com.example.think.drawing.DrawView
            android:id="@+id/activity_paint_pv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
     </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="11dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_paint_pencil"
            style="@style/paint_menu_text_view_style"
            android:src="@drawable/pencil"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/activity_paint_width"
            style="@style/paint_menu_text_view_style"
            android:src="@drawable/line"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/activity_paint_eraser"
            style="@style/paint_menu_text_view_style"
            android:src="@drawable/eraser"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/activity_paint_save"
            style="@style/paint_menu_text_view_style"
            android:src="@drawable/save"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/activity_paint_clear"
            style="@style/paint_menu_text_view_style"
            android:src="@drawable/cancel"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/activity_paint_alpha"
            style="@style/paint_menu_text_view_style"
            android:src="@drawable/gradient"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/activity_paint_color"
            style="@style/paint_menu_text_view_style"
            android:src="@drawable/colorwheel"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>
